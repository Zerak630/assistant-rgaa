{
	"extends": "stylelint-config-standard",
	"rules": {
		"custom-property-empty-line-before": null,
		"selector-class-pattern": [
			"(^(?!is|u)([a-z][a-zA-Z0-9]+-)?([A-Z][a-zA-Z0-9]+)(-[a-z][a-zA-Z0-9]+)?(--[a-z][a-zA-Z0-9]+)?$)|(^(is|u)-([a-z][a-zA-Z0-9]+)$)",
			{
				"message": "Expected class selector to follow SuitCSS' BEM convention : Component, Component-element, Component--modifier, namespace-Component, is-state, u-utility"
			}
		]
	}
}
